# Local SIM Agent API Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
SERVER_HOST=localhost
SERVER_PORT=8000

# Debug mode (enables API docs, detailed logging, auto-reload)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Default LLM provider (openai, anthropic, google, azure)
COPILOT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=AIza-your-google-api-key-here
GOOGLE_DEFAULT_MODEL=gemini-pro

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEFAULT_MODEL=gpt-4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_ALLOW_HEADERS=["*"]

# API Key Cache TTL (seconds)
API_KEY_CACHE_TTL=3600

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# Tool cleanup interval (seconds)
CLEANUP_INTERVAL=3600

# Maximum tool records to keep
MAX_TOOL_RECORDS=10000

# =============================================================================
# YAML PROCESSING CONFIGURATION
# =============================================================================

# Maximum YAML file size (bytes)
MAX_YAML_SIZE=1048576

# Auto-layout algorithm (hierarchical, force_directed, grid)
DEFAULT_LAYOUT_ALGORITHM=hierarchical

# =============================================================================
# WORKFLOW CONFIGURATION
# =============================================================================

# Maximum workflow complexity score
MAX_WORKFLOW_COMPLEXITY=100

# Default workflow template category
DEFAULT_TEMPLATE_CATEGORY=general

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable metrics collection
METRICS_ENABLED=true

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development features
DEV_MODE=true

# Auto-reload on file changes (development only)
AUTO_RELOAD=true

# Enable API documentation endpoints
ENABLE_DOCS=true

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================

# Custom provider endpoints (if using self-hosted models)
# CUSTOM_OPENAI_ENDPOINT=http://localhost:8080/v1
# CUSTOM_ANTHROPIC_ENDPOINT=http://localhost:8081/v1

# Rate limiting (requests per minute)
# RATE_LIMIT_RPM=60

# Database configuration (for future persistence features)
# DATABASE_URL=sqlite:///./sim_agent.db
# DATABASE_POOL_SIZE=10

# Redis configuration (for caching and session management)
# REDIS_URL=redis://localhost:6379/0
# REDIS_TTL=3600

# Webhook configuration (for external integrations)
# WEBHOOK_SECRET=your-webhook-secret-here
# WEBHOOK_TIMEOUT=30

# =============================================================================
# NOTES
# =============================================================================

# 1. At minimum, you need to set API keys for your preferred LLM provider
# 2. For production, set DEBUG=false and use appropriate CORS_ORIGINS
# 3. Adjust performance settings based on your hardware and usage patterns
# 4. Enable only the providers you plan to use to reduce startup time
# 5. Use strong, unique values for any secret keys in production